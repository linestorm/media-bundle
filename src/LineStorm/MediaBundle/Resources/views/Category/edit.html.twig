{% extends 'LineStormMediaBundle:Category:form.html.twig' %}

{% block page_title %}Edit Media Category{% endblock %}
{% block page_desc %}{% endblock %}

{% block module %}

    {{ form_start(form, {attr: { class: 'api-save'} }) }}
        {{ form_row(form.name) }}

        <div class="form-group">
            {{ form_label(form.parent) }}
            <div class="col-sm-10">
                {{ form_widget(form.parent) }}
                {{
                    include('LineStormMediaBundle:Form:mediatreebrowser.html.twig', {
                        url: url('linestorm_cms_module_media_api_get_category_tree'),
                        init_node: category.parent.id,
                        input: '#linestorm_cms_form_media_category_parent'
                    })
                }}
            </div>
        </div>

        {{

        }}

        <div class="form-group">
            <div class="col-sm-12">

                <button type="submit" class="btn btn-primary" data-url="{{ url('linestorm_cms_module_media_api_put_category', {id: category.id}) }}">
                    <i class="fa-save"></i> Save
                </button>
                <a class="btn btn-primary" data-url="{{ url('linestorm_cms_module_media_api_put_category', {id: category.id}) }}">
                    <i class="fa-picture-o"></i> Pictures
                </a>
                <button type="button" class="btn btn-danger media-form-delete" data-url="{{ path('linestorm_cms_module_media_api_delete_category', {id: category.id}) }}">
                    <i class="fa-trash-o"></i> Delete
                </button>
            </div>
        </div>

    {{ form_end(form) }}
{% endblock %}

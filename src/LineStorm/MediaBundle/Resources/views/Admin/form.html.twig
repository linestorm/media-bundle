{% extends 'LineStormCmsBundle:Admin:layout.html.twig' %}

{% block head %}
    {% block requirejs %}
        {{
            include('LineStormCmsBundle::requirejs.html.twig', {
                requirejs_module: ['cms_main', 'cms_media', 'cms_media_treebrowser']
            })
        }}
    {% endblock %}

    {% stylesheets
        filter="compass" output="assets/bundles/linestormmedia/css/media.css"
        "@LineStormMediaBundle/Resources/assets/sass/media.scss"
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block module %}

    {{ form_start(form) }}

        {% include 'LineStormMediaBundle:Form:multiple.html.twig' %}

        <div class="row">
            <div class="col-xs-12">
                <button type="submit" class="btn btn-primary media-api-save">
                    <i class="fa-save"></i> Save
                </button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
